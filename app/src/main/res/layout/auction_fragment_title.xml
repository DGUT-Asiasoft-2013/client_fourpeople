<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:context="com.example.fourpeople.campushousekeeper.auction.fragment.widget.TitleFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fdf0d9"
            android:gravity="center_vertical|left"
            android:paddingLeft="45dp"
            android:text="@string/spinner_title"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_title_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/mall" />
    </FrameLayout>
</LinearLayout>
