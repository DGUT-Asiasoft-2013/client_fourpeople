<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/goodsBuy_list_orderId"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text="ID" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <com.example.fourpeople.campushousekeeper.mall.view.AvatarDispose
                android:id="@+id/goodsBuy_list_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/goodsBuy_list_name"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsBuy_list_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="comment" />

            <TextView
                android:id="@+id/goodsBuy_list_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="right"
                android:text="date" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>